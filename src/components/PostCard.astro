---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  image?: ImageMetadata;
  href: string;
  badge?: string;
  variant?: 'vertical' | 'horizontal';
  loading?: 'eager' | 'lazy';
}

const { title, description, date, image, href, badge, variant = 'vertical', loading = 'lazy' } = Astro.props;

const formattedDate = date.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class={`post-card ${variant}`}>
  <div class="image-container" transition:name={`image-${href}`}>
    {image && <Image src={image} alt={title} loading={loading} />}
    {!image && <div class="placeholder-image">GamingZone</div>}
    {badge && <span class="badge">{badge}</span>}
  </div>
  <div class="content">
    <time datetime={date.toISOString()}>{formattedDate}</time>
    <h3 transition:name={`title-${href}`}><a href={href}>{title}</a></h3>
    <p>{description}</p>
    <a href={href} class="read-more">Leer m√°s &rarr;</a>
  </div>
</article>

<style>
  .post-card {
    background: var(--color-bg-secondary);
    border: 1px solid #333;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Horizontal Variant */
  .post-card.horizontal {
    flex-direction: row;
    height: 220px;
    align-items: stretch;
  }

  .post-card.horizontal .image-container {
    width: 280px;
    height: 100%;
    flex-shrink: 0;
  }

  .post-card.horizontal .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .post-card.horizontal h3 {
     margin-bottom: 0.5rem;
  }
  
  .post-card.horizontal p {
    margin-bottom: 1rem;
     display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .post-card.horizontal {
      flex-direction: column;
      height: auto;
    }
    .post-card.horizontal .image-container {
      width: 100%;
      height: 200px;
    }
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 255, 136, 0.1);
    border-color: var(--color-primary);
  }

  .image-container {
    height: 200px;
    background: #000;
    position: relative;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  
  .post-card:hover .image-container img {
    transform: scale(1.05);
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #222;
    color: #444;
    font-weight: bold;
    font-size: 1.5rem;
  }

  .badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--color-primary);
    color: #000;
    padding: 2px 8px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    border-radius: 4px;
    z-index: 10;
  }

  .content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  time {
    font-size: 0.85rem;
    color: #888;
    margin-bottom: 0.5rem;
    display: block;
  }

  h3 {
    margin-bottom: 0.8rem;
    line-height: 1.2;
    font-size: 1.4rem;
  }

  h3 a {
    text-decoration: none;
    color: var(--color-text);
  }
  
  h3 a:hover {
    color: var(--color-primary);
  }

  p {
    font-size: 1rem;
    color: #ccc;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    flex: 1;
  }
  
  .read-more {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: auto; /* Push to bottom */
  }
</style>
