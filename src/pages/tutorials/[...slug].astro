---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('tutorials');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
	<article class="post-content">
		<header class="post-header">
			<div class="meta">
				<span class="level-tag">{post.data.level}</span>
				<time datetime={post.data.date.toISOString()}>
					{post.data.date.toLocaleDateString('es-ES', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})}
				</time>
			</div>
			<h1 transition:name={`title-/tutorials/${post.slug}`}>{post.data.title}</h1>
			{post.data.image && <div transition:name={`image-/tutorials/${post.slug}`}><Image src={post.data.image} alt={post.data.title} class="hero-image" /></div>}
		</header>
		
		<div class="prose">
			<Content />
		</div>
	</article>
</Layout>

<style>
	.post-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.meta {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}

	.level-tag {
		background: var(--color-accent);
		color: #000;
		padding: 2px 8px;
		border-radius: 4px;
		font-weight: 700;
		text-transform: uppercase;
	}

	.meta time {
		color: #888;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		line-height: 1.2;
	}

	.hero-image {
		width: 100%;
		max-height: 400px;
		object-fit: cover;
		border-radius: 8px;
		margin-bottom: 2rem;
		box-shadow: 0 10px 30px rgba(0, 204, 255, 0.2); /* Blue glow for tutorials */
	}

	.prose {
		font-size: 1.1rem;
		line-height: 1.8;
		color: #ccc;
	}
	
	.prose :global(h2) {
		color: var(--color-accent);
		margin: 2rem 0 1rem;
		font-size: 1.8rem;
	}
	
	.prose :global(pre) {
		background: #1a1a2e !important;
		padding: 1.5rem;
		border-radius: 8px;
		margin-bottom: 1.5rem;
		border: 1px solid #333;
	}
</style>
