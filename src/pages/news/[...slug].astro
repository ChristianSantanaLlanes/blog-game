---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('news');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
	<article class="post-content">
		<header class="post-header">
			<div class="meta">
				<time datetime={post.data.date.toISOString()}>
					{post.data.date.toLocaleDateString('es-ES', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})}
				</time>
			</div>
			<h1 transition:name={`title-/news/${post.slug}`}>{post.data.title}</h1>
			{post.data.image && <div transition:name={`image-/news/${post.slug}`}><Image src={post.data.image} alt={post.data.title} class="hero-image" /></div>}
		</header>
		
		<div class="prose">
			<Content />
		</div>
	</article>
</Layout>

<style>
	.post-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.meta {
		color: var(--color-primary);
		font-weight: 700;
		margin-bottom: 1rem;
		text-transform: uppercase;
		font-size: 0.9rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		line-height: 1.2;
	}

	.hero-image {
		width: 100%;
		max-height: 400px;
		object-fit: cover;
		border-radius: 8px;
		margin-bottom: 2rem;
		box-shadow: 0 10px 30px rgba(0,0,0,0.5);
	}

	.prose {
		font-size: 1.1rem;
		line-height: 1.8;
		color: #ccc;
	}
	
	.prose :global(h2) {
		color: #fff;
		margin: 2rem 0 1rem;
		font-size: 1.8rem;
	}
	
	.prose :global(p) {
		margin-bottom: 1.5rem;
	}
	
	.prose :global(a) {
		color: var(--color-primary);
		text-decoration: underline;
	}
</style>
